generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

model User {
  id          Int      @id @default(autoincrement())
  username    String? 
  email       String?  @unique // used for local auth or when provider gives email
  password    String?          // only required for local auth
  provider    String?          // e.g. "google", "github", "local"
  providerId  String?          // ID from OAuth provider (null for local)
  createdAt   DateTime @default(now())
  role      Role   @default(USER)
  updatedAt   DateTime @updatedAt

  @@unique([provider, providerId]) // ensures unique provider accounts
} 

model Session {
  id         Int      @id @default(autoincrement())
  userId     Int
  title      String
  resumeTxt  String
  jobDesc    String
  startTime  DateTime?
  endTime    DateTime?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}